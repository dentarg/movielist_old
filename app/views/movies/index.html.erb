<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Seen</th>
    <th>To Watch</th>
    <th>Favorite</th>
  </tr>

<% for movie in @movies %>
  <tr>
    <td><%=h movie.name %></td>
    <td><%=h movie.year %></td>
    <td><%= link_to 'Seen',     seen_movie_path(movie),     :method => :post %></td>
    <td><%= link_to 'To watch', to_watch_movie_path(movie), :method => :post %></td>
    <td><%= link_to 'Favorite', favorite_movie_path(movie), :method => :post %></td>

    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

