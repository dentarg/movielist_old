<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title><%= @page_title ? "#{@page_title} - #{APP_CONFIG[:site_name]}" : APP_CONFIG[:site_name] %></title>
		<meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="distribution" content="all" />
		<meta name="robots" content="all" />	
		<meta name="resource-type" content="document" />
		<meta name="MSSmartTagsPreventParsing" content="true" />
		<%#= stylesheet_link_tag 'base' %>
		<%= stylesheet_link_tag 'blueprint/screen', :media => "screen, projection" %>
		<%= stylesheet_link_tag 'blueprint/print', :media => "print" %>
		<%= stylesheet_link_tag 'menu' %>
    <!--[if IE]>
  		<%= stylesheet_link_tag 'blueprint/ie', :media => "screen, projection" %>
    <![endif]-->		
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
    <div class="container">
<!-- Header -->
    	<div class="span-24">
    	  <div class="span-16">
    	    <h1><%= link_to "movielist", root_path %></h1>
    	  </div>
    	  <div class="span-8 last" style="text-align: right;">
    		  <% if logged_in? %>
    		    <p>
    		      Logged in as <%= current_user.email %>, 
    		      <%= link_to 'logout', logout_path %>.
    		    </p>
    		  <% else %>
    		    <p><%= link_to 'Log in', login_path %> or <%= link_to 'sign up', signup_path %></p>.
          <% end %>
    	  </div>
    	  
    	  <div class="span-24">
          <div id="navcontainer">
            <ul id="navlist">
              <% if logged_in? %><li><%= link_to "Add movie", new_movie_path %></li><% end %>
              <li><%= link_to 'Browse movies', movies_path %></li>
              <li><%= link_to "Movie night", '' %></li>
  					  <% if logged_in? %><li><%= link_to 'Logout', logout_path %></li><% end %>
            </ul>
          </div>
        </div>
			  
			  <% if logged_in? %>
          <div class="span-24">
            <div id="navcontainer">
              <ul id="navlist">
                <li>Your movies:</li>
    					  <li><%= link_to 'Seen',       user_seen_movies_path(current_user) %></li>
    					  <li><%= link_to 'To watch',   user_to_watch_movies_path(current_user) %></li>
    					  <li><%= link_to 'Favorites',  user_favorite_movies_path(current_user) %></li>
              </ul>
            </div>
    	    </div>
		    <% end %>
<!-- Main -->    	
    	<div class="span-24">
    	  <div class="span-24">
			    <%= flash_messages %>
			  </div>
			  <div class="span-24">			  
			    <%= yield %>
			  </div>
    	</div>
<!-- Footer
    	<div class="span-24 last">
    		<div class="span-8">
    			Box1
    		</div>
    		<div class="span-8">
    			Box2
    		</div>
    		<div class="span-8 last">
    			Box3
    		</div>
    	</div>	
-->
    </div>
	</body>
</html>