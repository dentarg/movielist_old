<% @user.password = @user.password_confirmation = nil %>
<%= title "Signup" %>
<% form_for @user do |f| %>
	<%= f.error_messages %>
		<ol>
			<li>
				<%= f.label :login, 'Username' %>
				<%= f.text_field :login %>
			</li>
			<li>
				<%= f.label :email %>
				<%= f.text_field :email %>
			</li>
			<li>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</li>
			<li>
				<%= f.label :password_confirmation, 'Confirm Password' %>
				<%= f.password_field :password_confirmation %>
			</li>
		</ol>
	<div class="buttons">
		<%= submit_tag 'Sign up' %>
	</div>
<% end %>
