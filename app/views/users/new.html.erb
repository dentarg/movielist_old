<% @user.password = @user.password_confirmation = nil %>

<%= title "sign up" %>

<% form_for @user do |f| %>
	<%= f.error_messages %>
				
		<p><%= f.label :login, 'username' %></p>
		<p><%= f.text_field :login, :class => "text" %></p>
			
		<p><%= f.label :email, 'email' %></p>
		<p><%= f.text_field :email, :class => "text" %></p>

		<p><%= f.label :password, 'password' %></p>
		<p><%= f.password_field :password, :class => "text" %></p>

		<p><%= f.label :password_confirmation, 'confirm password' %></p>
		<p><%= f.password_field :password_confirmation, :class => "text"%></p>

		<%= submit_tag 'Sign up' %>

<% end %>
