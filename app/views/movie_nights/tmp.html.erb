<% unless @users.empty? -%>
<strong>who:</strong >
  <% for user in @users -%>
    <% if user != @users.last && user != @users[-2] -%>
      <%= user %>,
    <% elsif user == @users[-2] -%>
      <%= user %>
    <% else -%>
      and <%= user %>
    <% end -%>
  <% end -%>
</p>
<% end -%>


