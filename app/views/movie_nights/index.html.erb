<%= title "Listing movie_nights" %>

<table>
  <tr>
    <th>Users</th>
    <th>Movies towatch</th>
    <th>Movies seen</th>
  </tr>

<% for movie_night in @movie_nights %>
  <tr>
    <td><%=h movie_night.user_ids %></td>
    <td><%=h movie_night.towatch_movie_ids %></td>
    <td><%=h movie_night.seen_movie_ids %></td>
    <td><%= link_to 'Show', movie_night %></td>
    <td><%= link_to 'Edit', edit_movie_night_path(movie_night) %></td>
    <td><%= link_to 'Destroy', movie_night, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

