<h1>New movie_night</h1>

<% form_for(@movie_night) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :users %><br />
    <%= f.text_field :users %>
  </p>
  <p>
    <%= f.label :movies_towatch %><br />
    <%= f.text_area :movies_towatch %>
  </p>
  <p>
    <%= f.label :movies_seen %><br />
    <%= f.text_area :movies_seen %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', movie_nights_path %>
